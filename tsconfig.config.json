{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node"]
  },
  "types": [
    "vitest",
    "vite/client",
    "vue/ref-macros",
    "vite-plugin-pages/client",
    "vite-plugin-vue-component-preview/client",
    "vite-plugin-vue-layouts/client",
    "vite-plugin-pwa/client",
    "unplugin-vue-macros/macros-global"
  ]
}
